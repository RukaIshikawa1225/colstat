import sys

def main():
    data = sys.stdin.read().strip()
    if not data:
        sys.exit(1)

    rows = []
    for line in data.splitlines():
        line = line.replace(",", " ")
        try:
            nums = [float(x) for x in line.split()]
        except ValueError:
            sys.exit(1)
        rows.append(nums)

    cols = len(rows[0])
    for r in rows:
        if len(r) != cols:
            sys.exit(1)

    for i in range(cols):
        col = [r[i] for r in rows]
        count = len(col)
        total = sum(col)
        mean = total / count
        print(count, total, mean)

if __name__ == "__main__":
    main()

